<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutRequestActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/about_request_activity.header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textSize="@dimen/about_request_activity.header.text_size"
            android:text="@string/default.text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/about_request_activity.text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@color/panel_background"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="@dimen/about_request_activity.text.text_size"
            android:text="@string/default.text"
            app:layout_constraintTop_toBottomOf="@id/about_request_activity.header"/>

        <TextView
            android:id="@+id/about_request_activity.receiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/about_request_activity.receiver.text_size"
            android:text="@string/default.text"
            app:layout_constraintTop_toBottomOf="@id/about_request_activity.text"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/about_request_activity.time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/about_request_activity.time.text_size"
            android:text="@string/default.text"
            app:layout_constraintTop_toTopOf="@id/about_request_activity.receiver"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>